  CREATE TABLE TELECOMN.Objectif (
      id_objectif NUMERIC(10) GENERATED ALWAYS AS IDENTITY
        (START WITH 1, INCREMENT BY 1, NO CYCLE),
      nom_objectif CHAR(150),
      id_perspective NUMERIC(10) NOT NULL,
      PRIMARY KEY (id_objectif),
