  IN TELNAN24.TELNANS4
  CCSID EBCDIC;

  CREATE UNIQUE INDEX TELECOMN.levier_index
  ON TELECOMN.Levier (id_levier ASC);


  CREATE TABLE TELECOMN.Indicateur (
      id_indicateur NUMERIC(10) GENERATED ALWAYS AS IDENTITY
